  <h1>Users Listing:</h1>
  <p class='pagination rows'>Rows per page: <%= render 'paginationamount' %></p><br />
  <%=  will_paginate @users, class: 'pagination' %>

  <table class='table'>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% @users.each do |u| %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.login %></td>
          <td><%=  u.email %></td>
          <% if logged_user?(u) %>
              <td><%=  link_to "Edit", edit_user_path(u) %></td>
              <td><%=  link_to "Delete", u, method: :delete, data: { confirm: "You sure?" } %>
          <% else %>
              <td></td>
              <td></td>
          <% end %>
        </tr>
    <% end %>

  </table>
  <p class='pagination page-info'><%= page_entries_info @users %></p><br />
  <%=  will_paginate @users, class: 'pagination'%><br />
  <p class='pagination rows'>Rows per page: <%= render 'paginationamount' %></p>
