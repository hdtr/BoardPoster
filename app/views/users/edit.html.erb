<% provide(:title, 'Edit profile') %>
    <%= form_for @user, html: { class: 'form-horizontal white-text' } do |f| %>
        <h1>Edit your profile:</h1>
    <div class='control-group'>
      <%= label_tag 'Login', nil, class: 'control-label' %>
      <div class='controls'>
        <div class='input-prepend'>
          <span class="add-on"><i class="icon-user"></i></span>
          <%= f.text_field :login, placeholder: 'login' %>
        </div>
      </div>
     </div>

    <div class='control-group'>
      <%= label_tag 'Email', nil, class: 'control-label' %>
      <div class='controls'>
        <div class='input-prepend'>
          <span class="add-on"><i class="icon-envelope"></i></span>
          <%= f.text_field :email, placeholder: 'email' %>
        </div>
      </div>
    </div>

    <div class='control-group'>
      <%= label_tag 'Confirm email', nil, class: 'control-label' %>
      <div class='controls'>
        <div class='input-prepend'>
          <span class="add-on"><i class="icon-envelope"></i></span>
          <%= f.text_field :email_confirmation, placeholder: 'confirm email' %>
        </div>
      </div>
    </div>

    <div class='control-group'>
      <%= label_tag 'Password', nil, class: 'control-label' %>
      <div class='controls'>
        <div class='input-prepend'>
          <span class="add-on"><i class="icon-eye-open"></i></span>
          <%= f.password_field :password, placeholder: 'pasword' %>
        </div>
      </div>
    </div>

    <div class='control-group'>
      <%= label_tag 'Password confirmation', nil, class: 'control-label' %>
      <div class='controls'>
        <div class='input-prepend'>
          <span class="add-on"><i class="icon-eye-open"></i></span>
          <%= f.password_field :password_confirmation, placeholder: 'password confirmation' %>
        </div>
      </div>
    </div>

    <div class="controls controls-row">
      <%= f.submit "Submit", class: "btn btn-primary btn-large span3" %>
      <%= f.submit "Go back", class: "btn btn-primary btn-large span2" %>
    </div>
<% end %>
