<% provide(:title, 'Login')%>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
        <%= f.label :login %>:
        <%= f.text_field :login %><br />

        <%= f.label :password %>:
        <%= f.password_field :password %><br />

        <%= f.submit "Log in" %>
    <% end %>

    <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
    <% end %>

    <p>New user? <%= link_to "Register", register_path %></p>

  </div>
</div>