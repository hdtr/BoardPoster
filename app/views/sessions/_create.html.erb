<%= form_for(:session, url: sessions_path, remote: true) do |f| %>
<ul>
      <li><%= link_to 'Register', new_user_path(@user), remote: true %></li>
      <li><%= link_to_submit "Log in" %>                               </li>
      <li><%= f.password_field :password, placeholder: 'Password' %>   </li>
      <li><%= f.text_field :login, placeholder: 'Login' %>             </li>
</ul>
<% end %>

